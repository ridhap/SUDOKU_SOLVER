<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:padding="10dp"
    android:background="#F0F0F8"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudoku Cops"
        android:textAlignment="center"
        android:textSize="48sp"
        android:fontFamily="@font/kr"
        android:textColor="#032877"
        android:layout_marginBottom="50dp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:src="@mipmap/hello" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp">
        <Button
            android:id="@+id/manual_input_button"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="Manual Input"
            android:fontFamily="@font/kr"
            android:background="@drawable/button_bound"
            android:textAlignment="center"
            android:onClick="manualInput"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            />

        <Button
            android:id="@+id/capture_button"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_bound"

            android:padding="10dp"
android:gravity="center"
            android:fontFamily="@font/kr"
            android:onClick="captureInput"
            android:text="Capture" />
    </LinearLayout>
</LinearLayout>